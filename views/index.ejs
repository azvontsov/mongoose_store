<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <title>Product List</title>
  </head>
  <body>
    <h1>My Products List</h1>
    <a href="/products/new">Add a New Product</a>

    <ul style="list-style: none">
      <% products.forEach(elem => { %>
      <div class="item-container">
        <li style="margin-bottom: 1rem">
          <ul style="list-style: none; margin-top: 2rem; margin-bottom: 2rem">
            <li><a href="/products/<%= elem._id %>"> <%= elem.name %> </a></li>
            <li class="img">
              <img src="<%= elem.img %>" alt="<%= elem.img %>" />
            </li>
            <li href="/products/<%= elem.price %>">Price: <%= elem.price %></li>
          </ul>
          <form
            style="display: inline; margin-right: 1rem"
            action="/products/<%= elem._id %>?_method=DELETE"
            method="POST"
          >
            <input type="submit" value="DELETE" />
          </form>
          <a style="margin: 0 1rem 0 0" href="/products/<%= elem._id %>/edit"
            ><button>EDIT</button></a
          >
        </li>
        <% }) %>
      </div>
    </ul>
  </body>
</html>
