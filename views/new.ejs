<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs')%>
    <title>Product List</title>
  </head>
  <body>
    <header>
      <h1>New Product Page</h1>
      <a href="/products"
        ><button class="btn-grad">Go back to product list</button></a
      >
    </header>
    <main class="main-show">
      <div class="parent-white-show">
        <div class="card-yellow-new">
          <form action="/products" method="POST">
            <p>Name: <input type="text" name="name" /></p>
            <p>Dimensions: <input type="text" name="dimensions" /></p>
            <p>Speed: <input type="text" name="speed" /></p>
            <p>Flight Time: <input type="text" name="flight time" /></p>
            <p>Flight distance: <input type="text" name="flight distance" /></p>
            <p>Price: <input type="text" name="price" /></p>
            <p>Quantity: <input type="text" name="quantity" /></p>
            <p>Image: <input type="text" name="img" /></p>
            <p>Sold: <input type="checkbox" name="sold" /><br /></p>
            <input type="submit" name="" value="Add Product" />
          </form>
        </div>
      </div>
    </main>
    <footer><%- include('./partials/footer.ejs')%></footer>
  </body>
</html>
